/* pages/login/login.wxss */
.body{
    width:100%;
    height:100vh;
    background-color:#edece8;
    position:relative;
}
.login_head{
    width:100%;
    height:320rpx;
    background-color:#395DB5;
}
.head_logo{
    width:360rpx;
    height:130rpx;
    margin-top:20rpx;
}
.head_title{
    font-size:44rpx;
    margin-top:20rpx;
    width:100%;
    margin-left:20rpx;
    color:#fff;
}
.login_content{
}
.content_every{
    width:100%;
    height:100rpx;
    position:relative;
    background-color:#fff;
}
.content_password{
    margin-top:6rpx;
    margin-top:4rpx;
}
.content_every_img{
    width:60rpx;
    height:60rpx;
    margin-top:20rpx;
    margin-left:20rpx;
}
.content_every input{
    width:600rpx;
    height:90rpx;
    left:100rpx;
    position:absolute;
    top:4rpx;
}
.content_btn{
    width:660rpx;
    height:90rpx;
    text-align:center;
    background-color:#395DB5;
    line-height:90rpx;
    border-radius:50rpx;
    margin:0 auto;
    margin-top:40rpx;
    color:#fff;
}
.login_change{
    width:100%;
    text-align:center;
    margin-top:20rpx;
}
.login_visit{
    width:100%;
    font-size:30rpx;
    text-align:center;
    margin-top: 40rpx;
}


.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-bottom: 40rpx;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #395DB5;
  font-size: 30rpx;
}

.userinfo-setting{
  width: 60rpx;
  height: 60rpx;
}